{
    "extends": [
        "stylelint-config-idiomatic-order",
        "stylelint-config-standard"
    ],
    "rules": {
        "indentation": 4,
        "at-rule-no-unknown": [true, {
            "ignoreAtRules": [
                "content",
                "else",
                "if",
                "for",
                "function",
                "return",
                "extends",
                "mixin",
                "include"
            ]  
        }],
        "selector-pseudo-class-no-unknown": [true, {
            ignorePseudoClasses: ["global"]
        }]
    }
}
