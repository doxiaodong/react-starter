{
    "extends": "react",
    "publicUrl": "${publicUrl}",
    "entries": {
        "lib": "src/lib.js",
        "index": "src/index.jsx"
    },
    "pages": {
        "index": {
            "template": "src/${htmlname}",
            "entries": "index",
            "path": ""
        }
    },
    "transforms": {
        "styl": {
            "transformer": "stylus",
            "config": {
                "autoprefixOptions": {
                    "browsers": ["last 2 version", "> 20%"]
                },
                "modules": true
            }
        }
    }
}
